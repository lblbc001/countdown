<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:time_text"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:text="$string:default_time"
        ohos:text_size="30vp"/>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="50vp">

        <Text
            ohos:id="$+id:addTenSecondsTv"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="5vp"
            ohos:text="+10秒"
            ohos:text_color="#2196F3"
            ohos:text_size="30vp"/>

        <Text
            ohos:id="$+id:addThirtySecondsTv"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="5vp"
            ohos:text="+30秒"
            ohos:text_color="#2196F3"
            ohos:text_size="30vp"/>

        <Text
            ohos:id="$+id:addOneMinuteTv"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="5vp"
            ohos:text="+1分钟"
            ohos:text_color="#2196F3"
            ohos:text_size="30vp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:orientation="horizontal"
        ohos:top_margin="20vp">

        <Image
            ohos:id="$+id:start_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$graphic:ic_start"
            ohos:padding="10vp"
            ohos:weight="1"/>

        <Image
            ohos:id="$+id:pause_image"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:image_src="$graphic:ic_pause"
            ohos:padding="10vp"
            ohos:visibility="hide"
            ohos:weight="1"/>
    </DirectionalLayout>
</DirectionalLayout>